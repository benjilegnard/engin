doctype html5
html(lang='en',ng-app='engin')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible',content='IE=edge,chrome=1')
    base(href='/')
    title Engin
    meta(name='description',content='')
    meta(name='viewport',content='width=device-width')
    link(href='http://fonts.googleapis.com/css?family=Quicksand|Source+Code+Pro', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='/css/engin.css')
    link(rel='stylesheet', href='/css/font-awesome.css')

  body

    #menu.fixed
      .row.navbar
        a.logo(href='#')
          i.icon-cog
          | Engin
        ul.nav
          li
            a(href='#designr')
              i.icon-code
              | Code
          li
            a(href='#editor')
              i.icon-code
              | Edit
          li
            a(href='#fiddler')
              i.icon-edit
              | Test
          li
            a(href='#writer')
              i.icon-cog
              | Review

    block toolbar
    include partials/menu/editor-menu.jade


    div.leftpanel(ng-view='sidebar')
      include partials/comp/folder-tree

    div.container(ng-view='content')
      block body

    script(src='js/libs/modernizr/modernizr.js')
    block scripts
      script(data-main='/js/engin.js',src='/js/libs/require.js')
